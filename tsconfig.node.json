{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "~/*": [
        "./src/*"
      ],
      "src/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "webextension-polyfill",
      "chrome"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "package.json",
    "vite.config.ts",
    "manifest.config.ts",
    "define.config.ts"
  ]
}